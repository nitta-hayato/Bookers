<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show", show_path(book) %></td>
			<td><%= link_to "edit", edit_path(book.id) %></td>
			<td><%= link_to "destroy", destroy_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>

		</tr>
		<% end %>
	</tbody>
</table>





<h1>New book</h1>
<%= form_for(@book) do |f| %>

<h4>Title</h4>
   <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>


<% end %>

